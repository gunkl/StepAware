{
    // Python configuration
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,

    // Use CMD for Python activation (avoids PowerShell execution policy issues)
    "terminal.integrated.defaultProfile.windows": "Command Prompt",

    // PlatformIO configuration
    // Let PlatformIO IDE use its built-in core - it handles installation automatically
    "platformio-ide.activateOnlyOnPlatformIOProject": true,
    "platformio-ide.useBuiltinPIOCore": true,

    // Python testing
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": false,

    // File associations
    "files.associations": {
        "*.ino": "cpp",
        "platformio.ini": "ini"
    },

    // Exclude patterns for file explorer
    "files.exclude": {
        "**/.git": true,
        "**/.pio/build": true,
        "**/.pio/libdeps": true,
        "**/venv": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },

    // Editor settings for embedded C++
    "editor.formatOnSave": false,
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.default.compilerPath": "",
    "C_Cpp.default.configurationProvider": "platformio-ide"
}
